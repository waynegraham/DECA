	<%= f.error_messages %>
	
	<p>
		<%= f.label :name %><br/>
		<%= f.text_field :name %>
	</p>
	
	<p>
		<%= f.label :geom %><br/>
		<%= f.text_field :geom %>
	</p>
	
	<p>
		<%= f.label :description %><br/>
